<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.r3tr0.obdiiscantool.SelectJsonActivity">

    <Button
        android:id="@+id/generalButton"


        android:layout_width="146dp"
        android:layout_height="53dp"

        android:layout_marginEnd="256dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_green_dark"
        android:text=" General Values"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/faultButton"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/holo_green_dark"
        android:text="Fault Codes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generalButton" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="76dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="accept"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="364dp" />

</android.support.constraint.ConstraintLayout>
