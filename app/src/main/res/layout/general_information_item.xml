<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/headlineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <com.r3tr0.graphengine.core.circles.CircularProgressBar
            android:id="@+id/gaugeProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:gravity="center_horizontal"
            app:circleColor="@color/cardview_light_background"
            app:progressBarWidth="30dp"
            app:progressColor="@android:color/holo_red_dark"
            app:totalProgressColor="@color/colorPrimaryDark"
            app:useCenter="false" />

        <TextView
            android:id="@+id/ValueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>
</android.support.v7.widget.CardView>